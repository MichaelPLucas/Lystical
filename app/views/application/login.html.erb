<div class="container-fluid" style="background-color: #126B12">
  <div class="row" style="height: 20vh"></div>
  <p id="notice" style="position: fixed"><%= notice %></p>
  <div class="row" style="height: 60vh">
    <div class="col-3"></div>
    <div class="col-6">
      <div style="background-color: #FFFFFF; border-radius: 20px; height: 100%; width: 100%">
        <div class="row">
          <div class="col-6 text-center py-4">
            <h3>Sign Up</h3>
            <form>
              <div class="row">
                <div class="col-1"></div>
                <label for="signupUsername" class="col-4 col-form-label">Username</label>
                <div class="col-6">
                  <input id="signupUsername" type="text" class="form-control" />
                </div>
                <div class="col-1"></div>
              </div>
              <div class="row">
                <div class="col-1"></div>
                <label for="signupEmail" class="col-4 col-form-label">Email</label>
                <div class="col-6">
                  <input id="signupEmail" type="email" class="form-control" />
                </div>
                <div class="col-1"></div>
              </div>
              <div class="row">
                <div class="col-1"></div>
                <label for="signupPassword" class="col-4 col-form-label">Password</label>
                <div class="col-6">
                  <input id="signupPassword" type="password" class="form-control" />
                </div>
                <div class="col-1"></div>
              </div>
              <div class="row">
                <div class="col-1"></div>
                <label for="signupConfirmPassword" class="col-4 col-form-label">Confirm password</label>
                <div class="col-6">
                  <input id="signupConfirmPassword" type="password" class="form-control" />
                </div>
                <div class="col-1"></div>
              </div>
            </form>
          </div>
          <div class="col-6 text-center py-4">
            <h3>Log In</h3>
            <form>
              <div class="row">
                <div class="col-1"></div>
                <label for="loginUsername" class="col-4 col-form-label">Username</label>
                <div class="col-6">
                  <input id="loginUsername" type="text" class="form-control" />
                </div>
                <div class="col-1"></div>
              </div>
              <div class="row">
                <div class="col-1"></div>
                <label for="loginPassword" class="col-4 col-form-label">Password</label>
                <div class="col-6">
                  <input id="loginPassword" type="password" class="form-control" />
                </div>
                <div class="col-1"></div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="col-3"></div>
  </div>
  <div class="row" style="height: 20vh">
</div>
